<div
  class="
    bg-gray-800 shadow-xl rounded-lg px-8 pt-6 pb-8 mb-4 border border-gray-700
  "
>
  <%= form_with(model: task, class: "space-y-6") do |form| %>
    <!-- エラー表示 -->
    <% if task.errors.any? %>
      <div
        class="bg-red-900/50 border-l-4 border-red-500 text-red-200 p-4 mb-4"
        role="alert"
      >
        <h2 class="font-bold">入力エラーがあります（<%= pluralize(task.errors.count, "件") %>）</h2>
        <ul class="list-disc list-inside mt-2">
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!-- 入力欄 -->
    <div>
      <%= form.text_field :title,
                      placeholder: "タスクを入力してください",
                      class:
                        "shadow appearance-none border border-gray-600 rounded w-full py-3 px-4 text-gray-100 bg-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-400" %>
    </div>
    <div class="flex items-center justify-between pt-4">
      <%= form.submit "保存する",
                  class:
                    "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded focus:outline-none focus:shadow-outline cursor-pointer transition transform hover:scale-105" %>
    </div>
  <% end %>
</div>
<!-- 戻るボタン -->
<div class="mt-4">
  <%= link_to "戻る", tasks_path, class: "text-blue-400 hover:text-blue-300 transition" %>
</div>
